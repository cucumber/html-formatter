  <ItemGroup>
    <ProjectReference Include="..\Cucumber.HtmlFormatter\Cucumber.HtmlFormatter.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Using Include="Microsoft.VisualStudio.TestTools.UnitTesting" />
  </ItemGroup>

</Project>
