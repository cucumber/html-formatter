{
  "name": "@cucumber/html-formatter",
  "version": "21.10.1",
  "description": "HTML formatter for Cucumber",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cucumber/html-formatter.git"
  },
  "author": "Aslak HellesÃ¸y",
  "license": "MIT",
  "scripts": {
    "clean": "shx rm -rf dist",
    "build:tsc": "tsc --build tsconfig.build.json",
    "build:webpack": "webpack",
    "build": "npm run clean && npm run build:tsc && npm run prepare && npm run build:webpack",
    "prepare": "shx mkdir -p dist/src && shx cp src/*.scss dist/src && shx cp src/index.mustache.html dist/src",
    "test": "mocha --exclude test/acceptance.ts",
    "prepublishOnly": "npm run build",
    "fix": "eslint --max-warnings 0 --fix src test && prettier --write src test",
    "lint": "eslint --max-warnings 0 src test && prettier --check src test",
    "validate": "shx mkdir -p acceptance && mocha test/acceptance.ts"
  },
  "peerDependencies": {
    "@cucumber/messages": ">=18"
  },
  "devDependencies": {
    "@babel/core": "7.26.10",
    "@cucumber/compatibility-kit": "^18.0.0",
    "@cucumber/gherkin": "32.1.0",
    "@cucumber/gherkin-streams": "^5.0.1",
    "@cucumber/gherkin-utils": "^9.0.0",
    "@cucumber/message-streams": "4.0.1",
    "@cucumber/messages": "27.2.0",
    "@cucumber/query": "13.2.0",
    "@cucumber/react-components": "22.4.2",
    "@eslint/compat": "^1.2.7",
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.20.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "10.0.10",
    "@types/node": "22.14.1",
    "@types/react": "18.3.20",
    "@types/react-dom": "18.3.6",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "babel-loader": "9.2.1",
    "css-loader": "7.1.2",
    "eslint": "^9.20.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.15.1",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "glob": "^11.0.0",
    "globals": "^16.0.0",
    "mini-css-extract-plugin": "2.9.2",
    "mocha": "11.1.0",
    "prettier": "^3.5.1",
    "puppeteer": "^24.0.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "sass": "1.86.3",
    "sass-loader": "16.0.5",
    "shx": "^0.4.0",
    "source-map-support": "0.5.21",
    "ts-loader": "9.5.2",
    "ts-node": "10.9.2",
    "typescript": "5.7.3",
    "webpack": "5.99.6",
    "webpack-cli": "6.0.1"
  },
  "bugs": {
    "url": "https://github.com/cucumber/html-formatter/issues"
  },
  "homepage": "https://github.com/cucumber/html-formatter#readme",
  "directories": {
    "test": "test"
  },
  "keywords": []
}
